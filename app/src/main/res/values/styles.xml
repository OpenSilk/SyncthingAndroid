<resources>

    <style name="session">

    </style>

    <style name="session.RecyclerCard">
        <!--<item name="android:layout_marginLeft">@dimen/session_recycler_item_margin</item>-->
        <!--<item name="android:layout_marginRight">@dimen/session_recycler_item_margin</item>-->
        <!--<item name="android:layout_marginBottom">@dimen/session_recycler_item_margin2</item>-->
        <!--<item name="android:layout_marginTop">@dimen/session_recycler_item_margin2</item>-->
    </style>

    <style name="session.RecyclerHeader" parent="mtrl.SingleLineListItemLinear">

    </style>

    <style name="session.RecyclerHeaderIcon" parent="mtrl.SingleLineListItemLinearInner.Avatar">

    </style>

    <style name="session.RecyclerHeaderText" parent="mtrl.SingleLineListItemLinearInner.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="session.RecyclerExpand">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="session.RecyclerTextLeftColumn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="session.RecyclerTextRightColumn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="session.RecyclerCard.Notif">
        <!--<item name="android:layout_marginLeft">4dp</item>-->
        <!--<item name="android:layout_marginRight">4dp</item>-->
    </style>

    <style name="session.RecyclerNotifHeader" parent="mtrl.SingleLineListItemLinear">
        <!--<item name="android:layout_width">match_parent</item>-->
        <!--<item name="android:layout_height">56dp</item>-->
        <item name="android:background">@color/notif_background</item>
        <!--<item name="android:padding">8dp</item>-->
        <!--<item name="android:gravity">center_vertical</item>-->
    </style>

    <style name="session.RecyclerNotifHeaderIcon" parent="mtrl.SingleLineListItemLinearInner.Avatar">

    </style>

    <style name="session.RecyclerNotifHeaderText" parent="mtrl.SingleLineListItemLinearInner.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="session.RecyclerNotifHeaderText.Time">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_text_secondary</item>
    </style>

    <style name="session.RecyclerNotifExpand">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="session.RecycleNotifMessageText">
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:textAppearance">?android:textAppearanceMedium</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="session.RecyclerCardRow">

    </style>

    <style name="session.edit">

    </style>

    <style name="session.edit.Container">
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="session.edit.FieldHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="session.edit.FieldDescription">
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearanceFieldDescription</item>
    </style>

    <style name="session.edit.FieldError" parent="session.edit.FieldDescription">
        <item name="android:textColor">@color/error_text</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextAppearanceFieldDescription" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black_text_secondary</item>
    </style>

    <style name="session.edit.EditText">
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="session.edit.EditText.Number">
        <item name="android:inputType">number</item>
    </style>

    <style name="session.edit.EditText.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="session.edit.EditTextMultiLine">
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="session.edit.Checkbox">

    </style>

    <style name="session.edit.RadioButton">

    </style>

    <style name="session.edit.Warning" parent="session.edit.FieldDescription">
        <item name="android:textColor">@color/warning_text</item>
    </style>

    <style name="session.edit.TextCode" parent="session.edit.FieldDescription">
        <item name="android:textColor">@color/code_text</item>
    </style>


</resources>