        <!--<item name="android:listDivider">@drawable/abc_list_divider_mtrl_alpha</item>-->
    </style>

    <style name="SettingsTheme" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <!--<item name="android:actionBarStyle">@style/SettingsActionBarStyle</item>-->
    </style>

    <style name="SettingsActionBarStyle" parent="android:Widget.DeviceDefault.ActionBar.Solid">
        <item name="android:background">@color/syncthing_brand</item>
    </style>

    <style name="LoginTheme" parent="Theme.Dialog.LightBase">
        <item name="colorPrimaryDark">@color/light_blue_700</item>
        <item name="colorPrimary">@color/syncthing_brand</item>
    </style>

    <!--<style name="SessionEditDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">-->
        <!--<item name="windowFixedWidthMajor">100%</item>-->
        <!--<item name="windowFixedWidthMinor">100%</item>-->
