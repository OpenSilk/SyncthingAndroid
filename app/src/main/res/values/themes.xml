<resources>
    <style name="SyncthingTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="toolbarStyle">@style/Toolbar.Dark.WhiteOverflow</item>
    </style>

    <style name="LoginTheme" parent="Theme.Dialog.LightBase">
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="SettingsTheme" parent="android:Theme.DeviceDefault.Light">
        <item name="android:actionBarStyle">@style/SettingsActionBarStyle</item>
    </style>

    <style name="SettingsActionBarStyle" parent="android:Widget.DeviceDefault.Light.ActionBar">
        <!--<item name="android:background">@color/syncthing_brand</item>-->
        <!--<item name="android:backgroundStacked">@color/syncthing_brand</item>-->
        <!--<item name="android:backgroundSplit">@color/syncthing_brand</item>-->
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>

    <!--dialog when large-->
    <style name="SessionEditDialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:windowTitleSize">?actionBarSize</item>
        <item name="android:windowTitleBackgroundStyle">@style/DialogWindowTitleBackground</item>
        <item name="android:windowAnimationStyle">@style/DialogWindowAnimation</item>
        <item name="android:windowSoftInputMode">stateVisible|adjustPan</item>
    </style>

    <style name="SessionEditDialogTheme.Edit">
        <item name="android:windowSoftInputMode">stateHidden|adjustPan</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/DialogWindowTitleTextAppearance</item>
    </style>

    <!--also in -large-->
    <style name="DialogWindowTitleTextAppearance" parent="android:TextAppearance.DeviceDefault.DialogWindowTitle">
        <item name="android:textSize">20sp</item>
        <!--<item name="android:fontFamily">sans-serif-medium</item>-->
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="DialogWindowTitleBackground">
        <item name="android:background">?colorPrimary</item>
        <item name="android:paddingLeft">16dp</item>
        <!--<item name="android:paddingStart">16dp</item>-->
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:paddingTop">0dp</item>-->
    </style>

    <style name="DialogWindowAnimation" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in_from_bottom</item>
        <!--<item name="android:windowExitAnimation">@anim/grow_fade_in_from_bottom</item>-->
    </style>
    <!--end dialog when large-->

    <!-- Base themes for dialog activities -->

    <style name="Theme.Dialog.LightBase" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <!--NoActionBar-->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--DarkActionBar-->
        <item name="toolbarStyle">@style/Toolbar.Dark.WhiteOverflow</item>
        <!--Light dark actionbar-->
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
    </style>

    <style name="Theme.Dialog.DarkBase" parent="Theme.AppCompat.DialogWhenLarge">
        <!--NoActionBar-->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--DarkActionBar-->
        <item name="toolbarStyle">@style/Toolbar.Dark</item>
    </style>

    <!-- end base dialog themes -->

    <!--Toolbar Styles -->

    <style name="Toolbar.Light" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Toolbar.Light.Transparent">
        <item name="android:background">@null</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.AppCompat.Toolbar.Button.Navigation</item>
    </style>

    <style name="Toolbar.Dark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Toolbar.Dark.Transparent">
        <item name="android:background">@null</item>
    </style>

    <style name="Toolbar.Dark.WhiteOverflow">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Toolbar.Dark.WhiteOverflow.Transparent">
        <item name="android:background">@null</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.AppCompat.Toolbar.Button.Navigation</item>
    </style>

    <!-- end toolbar styles -->
</resources>