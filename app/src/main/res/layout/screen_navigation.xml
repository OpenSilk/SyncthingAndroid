<syncthing.android.ui.navigation.NavigationScreenView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:colorBackground"
    >

    <syncthing.android.ui.common.CardRecyclerView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="0dp"
        style="@style/mtrl.List"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:dividerHorizontal"/>

    <LinearLayout
        android:id="@+id/common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/manage_devices"
            android:text="@string/manage_devices"
            android:drawableLeft="@drawable/ic_computer_grey600_36dp"
            style="@style/mtrl.SingleLineListItemTextView.Icon"/>


        <TextView
            android:id="@+id/app_settings"
            android:text="@string/settings"
            android:drawableLeft="@drawable/ic_settings_grey600_36dp"
            style="@style/mtrl.SingleLineListItemTextView.Icon"/>

    </LinearLayout>

</syncthing.android.ui.navigation.NavigationScreenView>