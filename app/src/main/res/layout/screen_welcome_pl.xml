<syncthing.android.ui.welcome.WelcomePage5View
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/welcomePLText"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0675a8"
        android:text="@string/welcome_pl_generating" />

   <LinearLayout
       android:id="@+id/btn_bar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="end"
       android:layout_alignParentBottom="true"
       style="@style/mtrl.ButtonBar">

       <Button
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:id="@+id/btn1"
           android:text="@string/welcome_pl_cancel"
           style="@style/mtrl.ButtonBarButton" />

       <Button
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:id="@+id/btn2"
           android:text="@string/welcome_pl_cancel"
           style="@style/mtrl.ButtonBarButton" />

   </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/welcomePLBanner"
        android:src="@drawable/logo_loading_icon_300"
        android:layout_above="@id/btn_bar"
        android:layout_below="@+id/welcomePLText"
        android:layout_margin="24dp"/>

</syncthing.android.ui.welcome.WelcomePage5View>