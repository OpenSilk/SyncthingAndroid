<syncthing.android.ui.session.SessionScreenView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/empty_text"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="@string/syncthing_seems_to_be_down_or_there_is_a_problem_with_your_internet_connection_retrying"
                android:gravity="center"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/empty_text"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:text="@string/retry"
                />

        </RelativeLayout>

        <syncthing.android.ui.common.CardRecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/mtrl.List"/>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</syncthing.android.ui.session.SessionScreenView>